
@{
    ViewBag.Title = "Modulus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.js"></script>

@Styles.Render("~/bundles/modulus-css")
@Scripts.Render("~/bundles/modulus-js")
@Scripts.Render("~/bundles/angular-winjs")

<nav class="game-nav">
    <p>@Html.ActionLink("Modulus", "Index", "Modulus")</p>
    <p>@Html.ActionLink("About", "About", "Modulus")</p>
    <p>Version: @ViewBag.Version. <br />Published on @ViewBag.Published</p>
</nav>
<div class="content-root">
    <div class="spacer"></div>
    <div ng-app="Modulus">
        <div ng-controller="modulusController as main" class="modulus">
            <ng-view></ng-view>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/bootstrap")

