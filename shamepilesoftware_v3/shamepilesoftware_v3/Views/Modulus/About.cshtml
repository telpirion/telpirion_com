
@{
    ViewBag.Title = "Modulus - About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="game-nav">
    <p><a href="Index">@ViewBag.Name</a></p>
    <p>@Html.ActionLink("About", "About", "Modulus")</p>
    <p>Version: @ViewBag.Version. <br />Published on @ViewBag.Published</p>
</nav>
